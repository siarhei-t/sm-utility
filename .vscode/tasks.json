{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "BUILD",
            "command": "cmake --build build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {"cwd": "${workspaceFolder}/cli"},
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "REBUILD",
            "command": "cmake --build build --clean-first",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {"cwd": "${workspaceFolder}/cli"},
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "CFG-WIN-DEBUG",
            "command": "cmake -DTARGET_WINDOWS=ON -DCMAKE_BUILD_TYPE=Debug -Bbuild",
            "options": {"cwd": "${workspaceFolder}/cli"},
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "CFG-LINUX-DEBUG",
            "command": "cmake -DTARGET_LINUX=ON -DCMAKE_BUILD_TYPE=Debug -Bbuild",
            "options": {"cwd": "${workspaceFolder}/cli"},
            "problemMatcher": []
        },
    ]
}