{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "UTILITY-BUILD",
            "command": "cmake --build build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/utility/cli"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "UTILITY-CFG-WIN-DEBUG",
            "command": "cmake -DTARGET_WINDOWS=ON -DCMAKE_BUILD_TYPE=Debug -Bbuild",
            "options": {
                "cwd": "${workspaceFolder}/utility/cli"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "UTILITY-CFG-LINUX-DEBUG",
            "command": "cmake -DTARGET_LINUX=ON -DCMAKE_BUILD_TYPE=Debug -Bbuild",
            "options": {
                "cwd": "${workspaceFolder}/utility/cli"
            },
            "problemMatcher": []
        },
    ]
}